<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_forum_my_bg" >

        <LinearLayout
                    android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_to_user_center_"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_user_center"
                android:gravity="center"
                android:padding="7dp"
                android:text="个人中心"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_to_user_nearby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_nearyby_user"
                android:gravity="center"
                android:padding="7dp"
                android:text="附近用户"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:drawableTop="@drawable/ic_user_range"
                android:gravity="center"
                android:padding="7dp"
                android:text="用户排行"
                android:textColor="@android:color/white" />
        </LinearLayout>

</RelativeLayout>