<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/categoty_itemImage"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:layout_centerHorizontal="true" android:src="@drawable/icn_category_food">
    </ImageView>

    <TextView
        android:id="@+id/categoy_itemText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/categoty_itemImage"
        android:layout_centerHorizontal="true"
        android:gravity="center" android:textColor="@color/black" android:text="美食" android:textSize="12sp" android:layout_marginTop="5dip">
    </TextView>

</RelativeLayout>