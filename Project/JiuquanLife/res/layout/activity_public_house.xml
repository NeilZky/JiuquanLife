<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <ImageView
            android:id="@+id/btn_back_ashd"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:src="@drawable/icn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="8dp"
            android:text="发布"
            android:textSize="17sp" />

        <Button
            android:id="@+id/btn_create_ashd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_create_new"
            android:minHeight="0dp"
            android:minWidth="0dp" />

        <ImageView
            android:id="@+id/btn_search_ashd"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/btn_create_ashd"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:src="@drawable/icn_search" />
    </RelativeLayout>
    
    <include layout="@layout/divider_ver"/>
    
	   <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/ll_rent_house"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icn_rent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="出租" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_sell_house"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icn_sale" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="出售" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_apply_rent_house"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icn_borrow" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="求租" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_buy_house"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:orientation="vertical"
                    android:padding="10dp" >

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/icn_buy" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="求购" />
                </LinearLayout>
            </LinearLayout>    
  <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E9F0E2" >

                <LinearLayout
                    android:id="@+id/ll_menu_rent_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <include layout="@layout/divider_ver" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/btn_rent_house"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:padding="10dp"
                            android:text="整套"
                            android:textSize="13sp" />

                        <include layout="@layout/divider_hor" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:padding="10dp"
                            android:text="单间"
                            android:textSize="13sp" />

                        <include layout="@layout/divider_hor" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:padding="10dp"
                            android:text="床位"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <include layout="@layout/divider_ver" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:padding="10dp"
                            android:text="商鋪"
                            android:textSize="13sp" />

                        <include layout="@layout/divider_hor" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:padding="10dp"
                            android:text="厂房/仓库/土地/车位"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <include layout="@layout/divider_ver" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_menu_sell_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <include layout="@layout/divider_ver" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/btn_sell_secondary_house"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:onClick="onClick"
                            android:padding="10dp"
                            android:text="二手房"
                            android:textSize="13sp" />

                        <include layout="@layout/divider_hor" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:padding="10dp"
                            android:text="商铺"
                            android:textSize="13sp" />

                        <include layout="@layout/divider_hor" />

                        <include layout="@layout/divider_hor" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:padding="10dp"
                            android:text="厂房/仓库/土地/车位"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <include layout="@layout/divider_ver" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_menu_apply_rent_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <include layout="@layout/divider_ver" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/btn_apply_rent_house"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:padding="10dp"
                            android:text="整套"
                            android:textSize="13sp" />

                        <include layout="@layout/divider_hor" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:padding="10dp"
                            android:text="单间"
                            android:textSize="13sp" />

                        <include layout="@layout/divider_hor" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:padding="10dp"
                            android:text="床位"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <include layout="@layout/divider_ver" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:padding="10dp"
                            android:text="商鋪"
                            android:textSize="13sp" />

                        <include layout="@layout/divider_hor" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:padding="10dp"
                            android:text="厂房/仓库/土地/车位"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <include layout="@layout/divider_ver" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_menu_buy_house"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <include layout="@layout/divider_ver" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/btn_wanted_buy_secondary_house"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:padding="10dp"
                            android:text="二手房"
                            android:textSize="13sp" />

                        <include layout="@layout/divider_hor" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:padding="10dp"
                            android:text="商铺"
                            android:textSize="13sp" />

                        <include layout="@layout/divider_hor" />

                        <include layout="@layout/divider_hor" />

                        <Button
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@null"
                            android:minHeight="0dp"
                            android:padding="10dp"
                            android:text="厂房/仓库/土地/车位"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <include layout="@layout/divider_ver" />
                </LinearLayout>
            </FrameLayout>
</LinearLayout>
