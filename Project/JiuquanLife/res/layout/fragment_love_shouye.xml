<?xml version="1.0" encoding="utf-8"?>
<com.jiuquanlife.module.publish.PullToRefreshView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pl_pub"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.jiuquanlife.module.love.customview.SlideShowView
                android:id="@+id/slideShowView"
                android:layout_width="fill_parent"
                android:layout_height="180dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_zhaoren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="5dp"
                    android:drawableTop="@drawable/shouye_zhaoren"
                    android:gravity="center_horizontal"
                    android:text="找人" />

                <TextView
                    android:id="@+id/tv_huodong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:drawableTop="@drawable/shouye_huodong"
                    android:gravity="center_horizontal"
                    android:text="活动" />

                <TextView
                    android:id="@+id/tv_shangjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="5dp"
                    android:drawableTop="@drawable/shouye_shangjia"
                    android:gravity="center_horizontal"
                    android:text="商家" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:background="#EDEDED" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="情感 天地"
                android:textColor="#F16E9A" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#EDEDED" />

            <ListView
                android:id="@+id/lv_love"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#F0EFEF"
                android:divider="@null"
                android:dividerHeight="3dp" />
        </LinearLayout>
    </ScrollView>

</com.jiuquanlife.module.publish.PullToRefreshView>