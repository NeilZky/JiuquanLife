<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.jiuquanlife"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="8dp"
            android:text="红柳论坛"
            android:textSize="17sp" />
         <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
                        android:minWidth="0dp"
            android:minHeight="0dp"
            android:text="发帖" />
        
    </RelativeLayout>

    <include layout="@layout/divider" />

     <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/pts_forum"
        android:layout_width="match_parent"
        app:pstsShouldExpand="true"
		app:pstsIndicatorColor="@color/blue_bg"    
		app:pstsIndicatorHeight="3dp"    
		app:pstsUnderlineHeight="1px"
		app:pstsDividerColor="#00000000"
		app:pstsTextDefalutColor="@android:color/black"
		app:pstsTextSelectedColor="@color/blue_bg"	
		app:pstsTextSize="16sp"	
        android:layout_height="35dip" 
        android:background="@android:color/white"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_forum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>