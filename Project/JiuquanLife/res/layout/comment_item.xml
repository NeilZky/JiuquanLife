<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_launcher" >
            </ImageView>

            <TextView
                android:id="@+id/tv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_user"
                android:text="123"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_user"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/iv_user" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_rate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_rate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_rating_star_small_on" />

            <ImageView
                android:id="@+id/iv_rate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/ic_rating_star_small_on" />

            <ImageView
                android:id="@+id/iv_rate3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/ic_rating_star_small_on" />

            <ImageView
                android:id="@+id/iv_rate4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/ic_rating_star_small_on" />

            <ImageView
                android:id="@+id/iv_rate5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dip"
                android:background="@drawable/ic_rating_star_small_on" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dip"
        android:textColor="#9B9B9B" />

    <LinearLayout
        android:id="@+id/ll_pic"
        android:layout_width="wrap_content"
        android:layout_height="80dip"
        android:layout_marginBottom="10dip"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_pic1"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_pic2"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_marginLeft="5dip"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/iv_pic3"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:layout_marginLeft="5dip"
            android:scaleType="centerCrop" />
    </LinearLayout>

</LinearLayout>